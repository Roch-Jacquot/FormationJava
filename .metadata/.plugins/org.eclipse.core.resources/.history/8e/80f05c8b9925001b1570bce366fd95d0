package fr.eql.ai108.date;

import java.text.SimpleDateFormat;
import java.util.Date;

public class DemoDate {

	public static void main(String[] args) {
		// instancier la date du jour
		Date date = new Date();
		


		//afficher une date
		//1ere méthode: toString()
		System.out.println("Date du jour " + date);
		
		//2E méthode: un objet SimpleDateFormat
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
		
		System.out.println("Date du jour formatée " + sdf.format(date));
		
		
		//L'année commence par 1900, le preimier mois commence à zéro
		Date dateDepreciee = new Date(120, 11, 13);
		
		System.out.println("Date du jour " + dateDepreciee.toString());
		
	}

}
